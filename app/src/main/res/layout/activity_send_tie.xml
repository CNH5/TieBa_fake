<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".activity.SendTieActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                tools:ignore="MissingConstraints"
                android:theme="@style/Widget.AppCompat.Light.ActionBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/back"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:ignore="ContentDescription" />

                <TextView
                        android:id="@+id/send_to_ba_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="发帖"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        tools:ignore="HardcodedText" />

                <TextView
                        android:id="@+id/send_tie_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="18sp"
                        android:textColor="#909399"
                        android:text="发布"
                        android:enabled="false"
                        tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:maxLines="1"
            android:maxLength="30"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textColor="@color/black"
            android:hint="加个标题吧~"
            android:inputType="text"
            tools:ignore="HardcodedText,MissingConstraints,Autofill" />

    <EditText
            android:id="@+id/info_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_et"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/cursor_blue"
            android:textColor="@color/black"
            android:hint="来吧，尽情发挥吧~"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            tools:ignore="HardcodedText,MissingConstraints,Autofill" />

    <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_et"
            android:background="@mipmap/add_border"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            tools:ignore="ContentDescription" />

    <ImageView
            android:id="@+id/unselect_img_bt"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="13dp"
            android:background="@mipmap/icon_close"
            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintRight_toRightOf="@+id/image"
            tools:ignore="ContentDescription"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="parent"
                android:background="#ECECEC" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>